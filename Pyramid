package Pattern;

public class Pyramid {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int k=0;
		int rows=5;
     for (int i=1;i<=rows;i++ ,k=0) {
    	 for (int j=1;j<=rows-i;j++) {
    		 System.out.print(" ");
    	 }
    	 while(k!=2*i-1) {
    		 System.out.print("*");
    		 k++;
    	 }
    	 System.out.println();
     }
	}

}
